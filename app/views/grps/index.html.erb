<% @grps.each do |grp| %>
  <tr>
    <td><%= grp.grp_name %></td>
    <td><%= link_to 'Show', grp %></td>
    <td><%= link_to 'Edit', edit_grp_path(grp) %></td>
    <td><%= link_to 'Destroy', grp, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

